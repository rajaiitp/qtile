#################################################################
# SUPER + ... KEYS
#################################################################

#terminal 
super +a
    xfce4-terminal

#vs code 2
super + c
    if ! pgrep code >/dev/null; then code&; fi; wmctrl -a code


#Notion 4
super + n
    notion-app&


#Sublime 5
super + s
    subl&


#Slack 6
super + k
    slack&


#outlook 7
super + m
    if ! pgrep MSOutlook >/dev/null; then ms-outlook-nativefier& ; fi ;wmctrl -a outlook;


#thunar 8
super + e
    if ! pgrep thunar >/dev/null; then thunar& ; fi ; wmctrl -a thunar;


#Telegram 9
super + y
    telegram-desktop& ; wmctrl -a telegram; wmctrl -a Telegram; wmctrl -a Diksha; wmctrl -a Corina;

#Telegram 9
super + z
    signal-desktop& ; wmctrl -a signal;

#Spotify 10
super + u 
   if ! pgrep spotify >/dev/null; then spotify& ; fi ; wmctrl -a spotify;


#chrome 11
super +g
    if ! wmctrl -l | grep Chrome>/dev/null; then google-chrome-stable& ; fi ; wmctrl -a chrome;


#Teams 12
super + t
    if ! pgrep teams >/dev/null; then teams&; fi ;wmctrl -a teams;


#Alacritty
super + r
    if ! pgrep alacritty >/dev/null; then alacritty&; fi ; xdotool set_desktop 15; wmctrl -a alacritty;









#Screenshot
super + alt + p
    flameshot gui

#archlinux-logout
super + x
    archlinux-logout


#Pavucontrol
super + v
    pavucontrol

#Firefox
super + b
    firefox


#Pragha
super + m
    pragha



super + i
    firefox --private-window

#Xkill
super + Escape
    xkill

